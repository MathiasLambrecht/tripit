<header class="button heightfifth">
    <h1>{{name}}<span class="spanicon closer" data-icon="&#xe007;"></span></h1>
</header>

<a href="#" id="btnAdd" class="button heightfifth orange fixed"><span>Add checkpoint<span class="spanicon closer" data-icon="&#xe003;"></span></span></a>

{{#if checkpoints}}
    <p class="button black heightfifth"></p>

    {{#each checkpoints}}
        <a href="{{id}}" class="btnCheckpoint button first heightfifth"><span>{{checkpoint}}</span></a>
    {{/each}}
{{/if}}

<p class="button black heightfifth"></p>

<a href="{{id}}" id="btnClose"><span data-icon="&#xe002;"></span></a>

